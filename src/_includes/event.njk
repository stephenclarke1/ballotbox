---
layout: 'base.njk'
---
{% if image %}
<section class="hero" style="background-image: url('{{ image }}');"></section>
{% else %}
<section class="hero hero-no-image"></section>
{% endif %}
        <main id="main" class="content">
                <div class="tri bg-text-light" aria-hidden="true"></div>
                <div class="post-container content-container">
                    <header class="post-header">
                        <h1 class="headline">{{ title }}</h1>
                        <div class="bylines">
                            {% if endDate %}
                            <p>{{ startDate | postDate }} - {{ endDate | postDate }}</p>
                            {% else %}
                            <p>{{ startDate | postDate }}</p>
                            {% endif %}
                        </div>
                    </header>
                    <section class="post-body">
                        {{ content | safe }}
                    </section>
                </div>
        </main>