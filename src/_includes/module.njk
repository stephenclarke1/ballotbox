---
layout: 'base.njk'
---
<main class="content">
    <div class="content-container">
        <div class="post-container">
            <header class="post-header">
                <h1>{{ title }}</h1>
            </header>
            <section class="post-body">
                {% if intro_text %}
                    <section id="intro" class="post-section box intro-text">
                        <div>
                            <figure class="float-left">
                                <img src="{{ intro_image.src }}" alt="{{ intro_image.alt }}">
                                <figcaption>{{ intro_image_caption }}<br><i>{{ intro_image_credit | safe }}</i></figcaption>
                            </figure>
                            <p>{{ intro_text }}</p>   
                        </div>
                    </section>
                    <div class="clear"></div>
                {% endif %}
                {{ content | safe }}
            </section>
        </div>
    </div>
</main>